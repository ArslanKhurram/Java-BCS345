      <Button layoutX="101.0" layoutY="263.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="5" />
      <Button layoutX="101.0" layoutY="220.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="8" />
      <Button layoutX="177.0" layoutY="308.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="3" />
      <Button layoutX="177.0" layoutY="262.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="6" />
      <Button layoutX="177.0" layoutY="219.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="9" />
