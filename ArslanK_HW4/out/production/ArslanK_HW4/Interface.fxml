            <Font name="System Bold" size="24.0" />
         </font></TextField>
      <TextField fx:id="answerTxtField" alignment="CENTER_RIGHT" editable="false" prefHeight="80.0" prefWidth="320.0">
         <font>
            <Font size="14.0" />
         </font></TextField>
      <Button layoutX="101.0" layoutY="352.0" mnemonicParsing="false" onAction="#readInput" prefWidth="40.0" text="0" />
